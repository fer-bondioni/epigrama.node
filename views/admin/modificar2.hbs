<div class="container" style="margin: 50px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4 style="text-align:center; margin-bottom:20px;">Modificar la noticia</h4>
            <form method="post" action="/admin/novedades/modificar2">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <input type="text" name="mes" class="form-control" placeholder="Mes"
                        value="{{novedad.mes}}">
                </div>
                <div class="form-group">
                    <textarea name="texto" rows="5" class="form-control" placeholder="Texto">{{novedad.texto}}</textarea>
                </div>
                <button type="submit" class="btn btn-dark offset-5">Modificar</button>
            </form>
            {{#if error}}
            <h5 class="text-center"
                style="background-color:red; margin-top: 10px; color:white; border-radius: 5px; font-size:16px; font-weight:bold; padding: 20px;">
                {{mensaje}}</h5>
            {{/if}}
        </div>
    </div>
</div>
